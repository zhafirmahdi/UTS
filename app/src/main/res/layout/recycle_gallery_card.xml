<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/gallery_image_card"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@drawable/gallery_1"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="0dp">
        <TextView
            android:id="@+id/gallery_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TxtDefaultSubHeading"
            android:textSize="18dp"
            android:text="Family"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_location"/>
            <TextView
                android:id="@+id/gallery_image_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TxtDefaultText"
                android:textSize="14dp"
                android:text="Bandung, Indonesia"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>